    </form> --> 

    <!-- <div class="container"> -->
        <!-- <h3 class="text mb-4">All Listings</h3> -->
         <style>
            #filters{
                display: flex;
                flex-wrap: wrap;
                align-items: center;
            }
            .filter{
                text-align: center;
                margin-right: 2rem;
                margin-top: 0.5rem;
                margin-bottom: 0.6rem;
                opacity: 0.7;
            }
            .filter:hover{
                opacity: 1;
            }

            .tax-info{
                display: none;
            }
            .tax-toggle{
             border: 1px solid black;
             border-radius: 1rem;
             height: 3.25rem;
             padding: 1rem;
             margin-left: 1rem;
             display: flex;
             align-items: center;
             margin-bottom: 1rem;
            }
         </style>

        <div id="filters">
            <div class="filter">
                <i class="fa-solid fa-fire"></i>     
                <p>Trending</p>       
            </div>

            <div class="filter">
                <i class="fa-solid fa-person-swimming"></i>   
                <p>Amazing pools</p>       
            </div>

            <div class="filter">
                <i class="fa-solid fa-tractor"></i>               
                 <p>Farms</p>       
            </div>

            <div class="filter">
                <i class="fa-solid fa-hospital"></i>    
                <p>Hospital</p>       
            </div>

            <div class="filter">
                <i class="fa-solid fa-umbrella-beach"></i>               
                 <p>Beach</p>       
            </div>

            <div class="filter">
                <i class="fa-solid fa-cart-shopping"></i>                
                <p>Shopping</p>       
            </div>
            <div class="filter">
                <i class="fa-solid fa-dumbbell"></i>    
                <p>Gym</p>       
            </div>

            <div class="filter">
                <i class="fa-solid fa-person-hiking"></i>     
                <p>Hiking</p>       
            </div>

            <div class="filter">
                <i class="fa-solid fa-plane-departure"></i>     
                <p>Transportation</p>       
            </div>
            <div class="filter">
                <i class="fa-solid fa-utensils"></i>     
                <p>Restaurants</p>       
            </div>

            <div class="tax-toggle">
                <div class="form-check-reverse form-switch">
                    <input class="form-check-input" type="checkbox" role="switch" id="flexSwitchCheckDefault">
                    <label class="form-check-label" for="flexSwitchCheckDefault">Display Total after taxes</label>
                  </div>
            </div>
        </div>

        <div class="row row-cols-lg-3 row-cols-md-2 row-cols-1 g-4">
            <% for (listing of allListing) { %>
                <div class="col">
                    <a href="/listings/<%= listing._id %>" class="listing-links">
                        <div class="card">
                            <img class="card-img-top" src="<%= listing.image.url %>" alt="listing_image" style="height: 20rem"/>
                            <div class="card-body">
                                <p class="card-text">
                                    <strong><%= listing.title %></strong><br>
                                    &#8377;<%= listing.price ? listing.price.toLocaleString("en-IN") : "N/A" %>/night
                                    <i class="tax-info">&nbsp;+18% GST</i>
                                </p>
                                
                            </div>
                        </div>
                    </a>
                </div>
            <% } %>
        </div>
    </div>
</body>

<script>
    let texSwitch=document.getElementById("flexSwitchCheckDefault");
    texSwitch.addEventListener("click",()=>{
        let taxInfo=document.getElementsByClassName("tax-info");
        for(info of taxInfo){
            if(info.style.display!="inline"){
                info.style.display="inline";
            }else{
                info.style.display="none";
            }
        }
    })
</script>

